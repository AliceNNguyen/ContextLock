<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".initial_survey.InitialSurvey4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/light_grey"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="4 of 4"
            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:background="@color/teal"
            android:onClick="openPrevious"
            android:padding="15dp"
            android:text="@string/previous"
            android:textAlignment="center"
            android:textColor="@color/init_survey_btn_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:background="@color/teal_shiny"
            android:onClick="sendResults"
            android:padding="15dp"
            android:text="send"
            android:textAlignment="center"
            android:textColor="@color/init_survey_btn_text_color"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/container4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp"
                    android:text="How do you handle fingerprint errors?"
                    android:textAlignment="center"
                    android:textColor="@color/question_text_color"
                    android:textSize="@dimen/question_text_size" />

                <TextView
                    android:id="@+id/handle_ignore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/init_survey_btn_margin"
                    android:background="@drawable/survey_btn_border"
                    android:onClick="onButtonClicked"
                    android:paddingLeft="@dimen/init_survey_btn_padding_left"
                    android:paddingTop="@dimen/init_survey_btn_padding"
                    android:paddingRight="@dimen/init_survey_btn_padding"
                    android:paddingBottom="@dimen/init_survey_btn_padding"
                    android:text="ignoring it"
                    android:textColor="@color/init_survey_btn_text_color"
                    android:textSize="@dimen/init_survey_btn_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/handle_switch_first_attempt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/init_survey_btn_margin"
                    android:background="@drawable/survey_btn_border"
                    android:onClick="onButtonClicked"
                    android:paddingLeft="@dimen/init_survey_btn_padding_left"
                    android:paddingTop="@dimen/init_survey_btn_padding"
                    android:paddingRight="@dimen/init_survey_btn_padding"
                    android:paddingBottom="@dimen/init_survey_btn_padding"
                    android:text="switch to my PIN/pattern after first attempt failed"
                    android:textColor="@color/init_survey_btn_text_color"
                    android:textSize="@dimen/init_survey_btn_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/handle_switch_multiple_attempts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/init_survey_btn_margin"
                    android:background="@drawable/survey_btn_border"
                    android:onClick="onButtonClicked"
                    android:paddingLeft="@dimen/init_survey_btn_padding_left"
                    android:paddingTop="@dimen/init_survey_btn_padding"
                    android:paddingRight="@dimen/init_survey_btn_padding"
                    android:paddingBottom="@dimen/init_survey_btn_padding"
                    android:text="switch to my PIN/pattern after multiple attempts failed"
                    android:textColor="@color/init_survey_btn_text_color"
                    android:textSize="@dimen/init_survey_btn_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/handle_later"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/init_survey_btn_margin"
                    android:background="@drawable/survey_btn_border"
                    android:onClick="onButtonClicked"
                    android:paddingLeft="@dimen/init_survey_btn_padding_left"
                    android:paddingTop="@dimen/init_survey_btn_padding"
                    android:paddingRight="@dimen/init_survey_btn_padding"
                    android:paddingBottom="@dimen/init_survey_btn_padding"
                    android:text="I try it later again"
                    android:textColor="@color/init_survey_btn_text_color"
                    android:textSize="@dimen/init_survey_btn_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/handle_not_sure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/init_survey_btn_margin"
                    android:background="@drawable/survey_btn_border"
                    android:onClick="onButtonClicked"
                    android:paddingLeft="@dimen/init_survey_btn_padding_left"
                    android:paddingTop="@dimen/init_survey_btn_padding"
                    android:paddingRight="@dimen/init_survey_btn_padding"
                    android:paddingBottom="@dimen/init_survey_btn_padding"
                    android:text="I'm not sure"
                    android:textColor="@color/init_survey_btn_text_color"
                    android:textSize="@dimen/init_survey_btn_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/errorHandlingEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:text="or write your other coping strategy here"
                    android:textColor="@color/dark_grey" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>