<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/background_image_description"
        android:src="@drawable/bg"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/color_gradient"></LinearLayout>

    <EditText
        android:id="@+id/set_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/teal"
        android:textCursorDrawable="@null"
        android:inputType="number"
        android:textSize="@dimen/edit_text_size"
        android:hint="@string/set_id"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="135dp"
        android:padding="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_tracking_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_color_gradient"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textSize="@dimen/button_text_size"
            android:layout_weight="@dimen/button_weight"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/start_tracking" />

        <Button
            android:id="@+id/stop_tracking_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_color_gradient"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textSize="@dimen/button_text_size"
            android:layout_weight="@dimen/button_weight"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/stop_tracking" />

        <Button
            android:id="@+id/set_user_id_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_color_gradient"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textSize="@dimen/button_text_size"
            android:layout_weight="@dimen/button_weight"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/enter_id" />

    </LinearLayout>


</RelativeLayout>