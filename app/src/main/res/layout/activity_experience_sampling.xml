<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExperienceSamplingActivity">

    <Button
        android:id="@+id/not_now_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:textSize="@dimen/send_text_size"
        android:background="@drawable/button_radius"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:text="@string/not_now"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@drawable/bg">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_border"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/lockswitch_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/header_text_size"
                android:background="@drawable/onside_border"
                android:padding="@dimen/header_padding"
                android:text="@string/lockswitch_text"
                android:textColor="@color/dark_grey" />

            <RadioGroup
                android:id="@+id/lockswitch_button_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingBottom="0dp">

                <RadioButton
                    android:id="@+id/lockswitch_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/radio_button_textsize"
                    android:text="@string/true_text"
                    android:layout_marginRight="@dimen/radio_button_text_margin_left"
                    android:textColor="@color/dark_grey"
                    android:onClick="onSwitchButtonClicked"
                    />

                <RadioButton
                    android:id="@+id/lockswitch_false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/radio_button_textsize"
                    android:text="@string/false_text"
                    android:layout_marginRight="@dimen/radio_button_text_margin_left"
                    android:textColor="@color/dark_grey"
                    android:onClick="onSwitchButtonClicked"
                    />
                <RadioButton
                    android:id="@+id/lockswitch_dontremember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/radio_button_textsize"
                    android:text="@string/do_not_remember"
                    android:textColor="@color/dark_grey"
                    android:onClick="onSwitchButtonClicked"
                    />
            </RadioGroup>

            <TextView
                android:id="@+id/fingerprint_error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/header_text_size"
                android:background="@drawable/onside_border"
                android:padding="@dimen/header_padding"
                android:text="@string/fingerprint_error_text"
                android:textColor="@color/dark_grey" />

            <RadioGroup
                android:id="@+id/fingerprint_error_button_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingBottom="0dp">

                <RadioButton
                    android:id="@+id/fingerprint_error_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/radio_button_textsize"
                    android:text="@string/true_text"
                    android:textColor="@color/dark_grey"
                    android:layout_marginRight="@dimen/radio_button_text_margin_left"
                    android:onClick="onFingerErrorRadioButtonClicked"
                    />

                <RadioButton
                    android:id="@+id/fingerprint_error_false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/radio_button_textsize"
                    android:text="@string/false_text"
                    android:textColor="@color/dark_grey"
                    android:layout_marginRight="@dimen/radio_button_text_margin_left"
                    android:onClick="onFingerErrorRadioButtonClicked"
                    />


                <RadioButton
                    android:id="@+id/fingerprint_error_not_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/radio_button_textsize"
                    android:text="@string/dont_know"
                    android:textColor="@color/dark_grey"
                    android:onClick="onFingerErrorRadioButtonClicked"
                    />
            </RadioGroup>


            <LinearLayout
                android:id="@+id/predictionSeekbarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/prediction_precision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/onside_border"
                android:padding="@dimen/header_padding"
                android:textSize="@dimen/header_text_size"
                android:text="@string/prediction_precision"
                android:textColor="@color/dark_grey" />


            <SeekBar
                android:id="@+id/seekBarPrediction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:max="4"
                android:thumbTint="@color/transparent"
                android:minHeight="3dp"
                android:maxHeight="3dp"
                android:progressDrawable="@drawable/seekbar_style"
                android:progress="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/rating_container_margin_bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prediction_strongly_disagree"
                    android:layout_width="@dimen/radio_button_text_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/radio_button_text_margin_left"
                    android:textSize="@dimen/rating_label"
                    android:textColor="@color/dark_grey"
                    android:layout_weight="@dimen/radio_button_text_weight"
                    android:textStyle="bold"
                    android:text="@string/strongly_disagree" />

                <TextView
                    android:id="@+id/prediction_disagree"
                    android:layout_width="@dimen/radio_button_text_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/radio_button_text_margin_left"
                    android:textSize="@dimen/rating_label"
                    android:textStyle="bold"
                    android:layout_weight="@dimen/radio_button_text_weight"
                    android:text="@string/disagree" />

                <TextView
                    android:id="@+id/prediction_neural"
                    android:layout_width="@dimen/radio_button_text_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/radio_button_text_margin_left"
                    android:textSize="@dimen/rating_label"
                    android:layout_weight="@dimen/radio_button_text_weight"
                    android:textStyle="bold"
                    android:text="@string/neutral" />

                <TextView
                    android:id="@+id/prediction_agree"
                    android:layout_width="@dimen/radio_button_text_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/radio_button_text_margin_left"
                    android:textSize="@dimen/rating_label"
                    android:layout_weight="@dimen/radio_button_text_weight"
                    android:textStyle="bold"
                    android:text="@string/agree" />

                <TextView
                    android:id="@+id/prediction_strongly_agree"
                    android:layout_width="@dimen/radio_button_text_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/radio_button_text_margin_left"
                    android:textSize="@dimen/rating_label"
                    android:textStyle="bold"
                    android:layout_weight="@dimen/radio_button_text_weight"
                    android:text="@string/strongly_agree" />
            </LinearLayout>

            <EditText
                android:id="@+id/reasonEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:inputType="text"
                android:hint="@string/reason_hint_input"
                android:backgroundTint="@color/dark_grey"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/radio_button_textsize" />

        </LinearLayout>

            <LinearLayout
                android:id="@+id/reasonCheckboxContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


            <TextView
